<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rviClPrincipal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:background="@color/MoradoSecundario"
    android:gravity="center">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/EditTextTituloDisco"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:background="@drawable/edit_text_recyclerview_datos"
            app:layout_constraintBottom_toTopOf="@+id/EditTextNombreBanda"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:textSize="16sp"
            />

        <EditText
            android:id="@+id/EditTextNombreBanda"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:background="@drawable/edit_text_recyclerview_datos"
            app:layout_constraintBottom_toTopOf="@+id/EditTextAno"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextTituloDisco"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/EditTextAno"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:background="@drawable/edit_text_recyclerview_datos"
            app:layout_constraintBottom_toTopOf="@+id/EditTextEstilo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextEstilo"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/EditTextEstilo"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:background="@drawable/edit_text_recyclerview_datos"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextAno"
            android:gravity="center_vertical"
            android:textSize="16sp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/EditTextNota"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:background="@color/GrisRecyclerView"
        android:gravity="center"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/botonAtrasMenuPrincipal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/AmarilloBoton"
        android:text="@string/detalles"
        android:textColor="@color/black"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</LinearLayout>